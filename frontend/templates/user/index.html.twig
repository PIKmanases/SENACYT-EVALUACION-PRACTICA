{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block container %}
    <div class="content">
        <div class="container col-md-6">
            <div class="row">
                <div class="col-12">
                    <div class="card-box py-2 bg-blue" >
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <h4 class="text-white font-weight-bold">Iniciar sesión</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card border">
                <div class="card-body">
                    <form method='POST' id='formdata'>
                        <div class="row col-md-12 align-content-center justify-content-center">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label for="usuario" class="mt-2">Usuario</label>
                                    <input class="form-control" placeholder="Usuario" type="text" name="usuario" id="usuario" required="required">
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label for="password" class="mt-2">Contraseña</label>
                                    <input class="form-control" placeholder="Contraseña" type="password" name="password" id="password" required="required">
                                </div>
                            </div>
                            <div class="col-md-9">
                                <button type="button" role="button" class="btn btn-lg btn-block btn-secondary">Iniciar Sesión</button>
                            </div>
                            <div class="col-md-9 text-center mt-2">
                                <a>¿Olvidó su contraseña?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="../assets/js/jquery-3.3.1.min.js"></script>
    <script>
        
        $("button").click(function(){
            var $usuario = $('#usuario').val();
            var $contrasenia=$('#password').val();
            $.ajax({
                type: "POST",
                url: "http://localhost:5000/login",
                data: JSON.stringify({
                    user: $usuario,
                    contrasenia: $contrasenia
                }),
                contentType: "application/json; charset=utf-8",
                succes: function(data){
                    console.log(data);
                    alert('todo ok');
                },
                failure: function(data){
                    alert('todo ok');
                    alert(data.responseText);
                },
                error: function (data){
                    alert('todo ok');
                    alert(data.responseText);
                }
            });        
        });
    </script>
{% endblock %}
