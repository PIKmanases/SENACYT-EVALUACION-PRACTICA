{% extends 'baseVacia.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block container %}
    <div class="content">
        <div class="container col-md-6">
            <div class="row">
                <div class="col-12">
                    <div class="card-box py-2 bg-blue" >
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <h4 class="text-white font-weight-bold">Iniciar sesión</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card border">
                <div class="card-body">
                    <fieldset>
                        {{ form_start(form) }}
                        <div class="row col-md-12 align-content-center justify-content-center">
                            <div class="col-md-9">
                                <div class="form-group">
                                    {{ form_label(form.usuario, 'CUI/Pasaporte', {'label_attr': {'class': 'mt-2'}}) }}
                                    {{ form_widget(form.usuario, {'attr': {'class': 'form-control','placeholder': 'CUI/Pasaporte', 'type':'number'}}) }}
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    {{ form_label(form.password, 'Contraseña', {'label_attr': {'class': 'mt-2'}}) }}
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña'}}) }}
                                </div>
                            </div>
                            <div class="col-md-9">
                                <input type="submit" role="button" value="Iniciar Sesión" class="btn btn-lg btn-block btn-secondary">
                            </div>
                            <div class="col-md-9 text-center mt-2">
                                <a>¿Olvidó su contraseña?</a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </fieldset>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
